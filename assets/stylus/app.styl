@import  '../../node_modules/material-design-icons/iconfont/material-icons.css'
@import '../../node_modules/@mdi/font/css/materialdesignicons.css'

@require '~vuetify/src/stylus/settings/_variables.styl'
@require '~vuetify/src/stylus/main.styl'

.page
  @extend .fade-transition

.secondary-bg
  background-color: #f8f8f8

.jumbotron__content
  background: rgba(0, 0, 0, .6)

.toolbar
  background-color: transparent !important
  box-shadow: none
  position: absolute

  nav.nav-menu ul li
    display: inline-block

    a
      color: rgba(255,255,255,.65)
      font-weight: 700
      line-height: 1.9
      text-transform: uppercase
      font-family: Roboto,sans-serif
      font-size: 13px
      padding: 20px 15px 15px
      letter-spacing: .6px
      justify-content: center
      flex: 1 0 auto
      display: flex
      text-decoration: none

      &.is-active
        color: white

  &.sticky-toolbar
    position: fixed
    background-color: #333 !important
    transition: background .5s
    box-shadow: 0px 2px 4px -1px rgba(0, 0, 0, .2), 0px 4px 5px 0px rgba(0, 0, 0, .14), 0px 1px 10px 0px rgba(0, 0, 0, .12)

    nav.nav-menu ul li a
      color: rgba(255,255,255,.65)
      &.is-active
        color: #fff
        border-bottom: 5px solid #ff5252

ul.social
  display: inline-flex

  li
    list-style: none
    padding: 0 2px

    a i.icon
      display: block
      width: 40px
      height: 40px
      line-height: 40px
      border-radius: 50%
      font-size: 16px
      text-align: center
      background-color: #2a2a2f
      color: #fff !important

      &:hover
        color: #ff5252 !important

@media only screen and (min-width: 1904px)
  .container
    max-width: 1170px

section
  &.secondary-bg-color
    background-color: #f8f8f8;

  &.section-bd-top
    border-top: 1px solid rgba(0,0,0,.06)

  .section-common-space
    padding-top: 113px
    padding-bottom: 120px

  .section-title
    font-weight: 700
    font-size: 25px
    color: #333
    line-height: 1.3
    text-transform: uppercase
    margin: 0 0 23px

  p
    color: #757575
    font-size: 13px
    font-family: Roboto,sans-serif
    font-weight: 400
    line-height: 2
    margin: 0 0 15px

section#home
  .swiper-pagination-progressbar .swiper-pagination-progressbar-fill
    background: #ff5252

section#twitter
  .parallax__content
    background: rgba(35, 35, 40, 0.8)

footer.main-footer
  .footer-top
    background-color: #232328;
