.page
  @extend .fade-transition

@media only screen and (min-width: 1904px)
  .container
    max-width: 1170px

.grabbing
  cursor: grabbing
  cursor: -webkit-grabbing
  cursor: -moz-grabbing

section
  &.secondary-bg-color
    background-color: #f8f8f8;

  &.section-bd-top
    border-top: 1px solid rgba(0,0,0,.06)

  .section-common-space
    padding-top: 113px
    padding-bottom: 120px

  .section-title
    font-weight: 700
    font-size: 25px
    color: #333
    line-height: 1.3
    text-transform: uppercase
    margin: 0 0 23px

  p
    color: #757575
    font-size: 13px
    font-family: Roboto,sans-serif
    font-weight: 400
    line-height: 2
    margin: 0 0 15px

  &#twitter
    .parallax__content
      background: rgba(35, 35, 40, 0.8)
