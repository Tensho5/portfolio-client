footer.main-footer
  .footer-top
    background-color: #232328;

ul.social
  display: inline-flex

  li
    list-style: none
    padding: 0 2px

    a i.icon
      display: block
      width: 40px
      height: 40px
      line-height: 40px
      border-radius: 50%
      font-size: 16px
      text-align: center
      background-color: #2a2a2f
      color: #fff !important

      &:hover
        color: #ff5252 !important
