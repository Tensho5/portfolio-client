section#education
  .parallax__content
    background: rgba(40, 40, 40, 0.6)

  .main-container
    position: absolute
    user-select: none
    width: 100%
    bottom: 0
    left: 0
    right: 0

    .experience-section
      position: absolute
      bottom: 300px
      width: 100%

      .title-date
        font-size: 5rem

      p.title
        color: #f8f8f8
        font-size: 1.4rem

      p.description
        color: #f8f8f8
        font-size: 1.2rem

  .timeline
    left: calc(50% - 250px)
    position: absolute
    bottom: -5px
    user-select: none

    .date-item
      text-align: center
      display: inline-block
      width: 40px
      font-weight: 700
      color: #f8f8f8
      margin: 0 10px 0 10px

      .date-line
        font-size: 7px

  .lower-container
    background-color: rgba(255,82,82,.6)

    .slider-container
      width: 150px
      height: 80px
      margin-top: -30px
      margin-left: calc(50% - 287px)
      position: relative

      .slider-wave
        z-index: 500
        position:relative
        top: -30px

      .slider-button
        position: absolute
        z-index: 999
        left: 42px
        top: -25px
        width: 50px
        height: 50px
        border-radius: 50%
        background: #f8f8f8
        cursor: grab
        cursor: -webkit-grab
        cursor: -moz-grab

        .slider-icon
          padding-left: 13px
          padding-top: 13px
          color: #232328
